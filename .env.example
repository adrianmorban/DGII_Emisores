# URL de la página DGII para descargar el CSV
DGII_URL=https://dgii.gov.do/app/WebApps/Misc/VerLista/?doc=EEC160525

# Configuración de la base de datos
DB_PATH=./dgii_data.db

# Configuración de descarga
DOWNLOAD_PATH=./downloads

# Configuración de Puppeteer
PUPPETEER_HEADLESS=false
PUPPETEER_TIMEOUT=60000

# Tiempo máximo de espera para la descarga del archivo (en milisegundos)
DOWNLOAD_TIMEOUT=60000

# Número de intentos para operaciones que pueden fallar
MAX_RETRIES=3

# Configuración del servidor Express
PORT=3000
NODE_ENV=development
# Lista de orígenes permitidos para CORS, separados por comas
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://tudominio.com

# Configuración de rate limiting
# Ventana de tiempo en minutos
RATE_LIMIT_WINDOW_MS=15
# Máximo de solicitudes por ventana
RATE_LIMIT_MAX=100

# Programación de actualización automática (formato cron)
# Por defecto: todos los días a las 3:00 AM
# Minuto Hora Día-del-mes Mes Día-de-la-semana
UPDATE_SCHEDULE=0 3 * * *

# Forzar actualización en el inicio del servidor
FORCE_UPDATE_ON_START=true
